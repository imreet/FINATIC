<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/learnbg"
    tools:context=".Learn">

    <ImageView
        android:layout_width="46dp"
        android:layout_height="42dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/baseline_lightbulb_24"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Learn with Finatic"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="343dp"
            android:layout_height="74dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="35dp"
            android:drawableLeft="@drawable/baseline_lightbulb_24"
            android:text="What is Investing?"
            android:onClick="openContentpage1"
            android:textAlignment="textStart"
            android:background="@drawable/learn_bt"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="343dp"
            android:layout_height="74dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="240dp"
            android:drawableLeft="@drawable/baseline_lightbulb_24"
            android:background="@drawable/learn_bt"
            android:text="What is SIP?"
            android:onClick="openContentpage2"
            android:textAlignment="textStart"
            android:textColorLink="#EC4747"
            app:strokeColor="#EF1F1F"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="343dp"
            android:layout_height="74dp"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="35dp"
            android:text="What are Mutual Funds?"
            android:onClick="openContentpage3"
            android:textAlignment="textStart"
            android:drawableLeft="@drawable/baseline_lightbulb_24"
            android:background="@drawable/learn_bt"
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="343dp"
            android:layout_height="74dp"
            android:layout_marginTop="420dp"
            android:layout_marginLeft="35dp"
            android:text="Difference between Mutual Funds and FD"
            android:onClick="openContentpage4"
            android:drawableLeft="@drawable/baseline_lightbulb_24"
            android:background="@drawable/learn_bt"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="343dp"
            android:layout_height="74dp"
            android:layout_marginTop="510dp"
            android:layout_marginLeft="35dp"
            android:text="How are Mutual Funds different from Stocks"
            android:drawableLeft="@drawable/baseline_lightbulb_24"
            android:background="@drawable/learn_bt"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="343dp"
            android:layout_height="74dp"
            android:layout_marginTop="595dp"
            android:layout_marginLeft="35dp"
            android:drawableLeft="@drawable/baseline_lightbulb_24"
            android:text="How are Mutual Funds different from FD?"
            android:background="@drawable/learn_bt"
            ></Button>

    </LinearLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomnavview"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottombg"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:elevation="3dp"
        app:menu="@menu/bottom_menu"
        />

</RelativeLayout>